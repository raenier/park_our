<!DOCTYPE html>
<html>
  <head>
    <title>ParkOur</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <% if value.is_a?(Array) %>
        <% value.each do |msg| %>
          <div class="flash flash-<%= key %>">
            <%= msg %>
          </div>
        <% end %>
      <% else %>
        <div class="flash flash-<%= key %>">
          <%= value %>
        </div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
